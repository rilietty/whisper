<%= form_for(@whisper, url: choose_new_or_edit) do |f| %>
  <% if @whisper.errors.any? %>
    <div id="error_explanation">
      <h2><%= @whisper.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @whisper.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :タイトル %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <%= f.label :ささやき %>
  <%= f.text_field :content, class: 'form-control' %>
  <br>
  <%= f.submit 'ささやく', class: 'btn btn-danger active btn-block' %>
  <% end %>

<%= link_to "ささやきリストにもどる", whispers_path %>